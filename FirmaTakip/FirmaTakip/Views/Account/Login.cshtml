@model UserLoginModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>FirmaTakip</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <form asp-action="Login" method="post" class="mx-auto mt-5 pt-5 pb-5 pl-3 pr-3  w-25 shadow">
        <div class="form-group">
            <label>Kullanıcı Adı:</label><br />
            <span class="text-danger" asp-validation-for="@Model.UserName"></span>
            <input type="text" asp-for="@Model.UserName" class="form-control" />
        </div>
        <div class="form-group">
            <label>Şifre</label><br />
            <span class="text-danger" asp-validation-for="@Model.Password"></span>

            <input type="text" asp-for="@Model.Password" class="form-control" />
        </div>
        <div class="form-check">
            <input type="checkbox" asp-for="@Model.RememberMe" class="form-check-input" />
            <label class="form-check-label" asp-for="RememberMe">Beni Hatırla</label>
        </div>
        <div>
            <button type="submit" class="btn btn-info btn-block mt-3">Giriş Yap</button>
        </div>
    </form>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>
