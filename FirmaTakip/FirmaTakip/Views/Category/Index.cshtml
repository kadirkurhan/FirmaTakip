@model List<FirmaTakip.Entities.Category>

<div class="float-right"><a class="btn btn-info mb-2" asp-action="createcategory">Kategori Ekle</a></div>
<div class="text-center">
    <table class="table table-sm table-hover table-bordered">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Kategori</th>
                <th scope="col">İşlem</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.Id</th>
                    <td>@item.Name</td>
                    <td>
                        <a class="btn btn-warning btn-sm" asp-action="update" asp-route-id="@item.Id"><i class="fas fa-edit"></i></a>
                        <a asp-action="delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm"><i class="fas fa-trash-alt"></i></a>
                    </td>


                </tr>
             }
        </tbody>

    </table>
</div>