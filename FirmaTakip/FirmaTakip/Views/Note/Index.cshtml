@model List<FirmaTakip.Entities.Note>

<div class="float-right"><a class="btn btn-info mb-2" asp-action="create">Not Ekle</a></div>
<br>
<div class="">
    <br>
    <div class="container-fluid">
        @foreach (var item in Model)
        {
            <div class="accordion" id="accordionExample">


                <div class="card">
                    <div class="card-header" id="@item.Id">
                        <a asp-action="delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm float-right ml-1"><i class="fas fa-trash-alt"></i></a>
                        <a class="btn btn-warning btn-sm float-right" asp-action="update" asp-route-id="@item.Id"><i class="fas fa-edit"></i></a>
                        <h2 class="mb-0 form-inline">
                            <button class="btn btn-link btn-block text-left collapsed text-decoration-none text-dark" type="button" data-toggle="collapse" data-target="#collapse-@item.Id" aria-expanded="false" aria-controls="@item.Id">
                                @item.Subject
                            </button>
                        </h2>
                    </div>
                    <div id="collapse-@item.Id" class="collapse" aria-labelledby="@item.Id" data-parent="#accordionExample">
                        <div class="card-body">
                                <p class="float-right">@item.Date.ToString("MM/dd/yyyy H:mm")</p>
                            @item.Content
                        </div>
                    </div>
                </div>
                
            </div>
        }

        </div>
</div>