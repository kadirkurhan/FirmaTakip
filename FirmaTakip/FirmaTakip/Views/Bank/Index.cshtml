@model List<FirmaTakip.Entities.Bank>

<div class="float-right"><a class="btn btn-info mb-2" asp-action="createbank">Hesap Ekle</a></div>
<div class="text-center">
    <table class="table table-sm table-hover table-bordered">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Banka</th>
                <th scope="col">Iban</th>
                <th scope="col">Kart No</th>
                <th scope="col">Şifre</th>
                <th scope="col">Son Kullanma</th>
                <th scope="col">CVV-B</th>
                <th scope="col">CVV-K</th>
                <th scope="col">İşlem</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.BankName</td>
                <th>@item.Iban</th>
                <td>@item.CardNo</td>
                <td>@item.Password</td>
                <td>@item.SKT</td>
                <td>@item.CVVB</td>
                <td>@item.CVVK</td>

                <td>
                    <a class="btn btn-warning btn-sm" asp-action="update" asp-route-id="@item.Id"><i class="fas fa-edit"></i></a>
                    <a asp-action="delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm"><i class="fas fa-trash-alt"></i></a>
                </td>


            </tr>
             }
        </tbody>

    </table>
</div>